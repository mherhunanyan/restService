{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": ["*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
